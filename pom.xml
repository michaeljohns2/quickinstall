<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.accumulobook</groupId>
  <artifactId>accumulo-quickinstall</artifactId>
  <packaging>pom</packaging>
  <!-- MLJ: updated from 1.6.1 -->
  <version>1.6.5</version>
  <description>Create a standalone distribution of the Apache Accumulo
  Project version ${project.version} with dependencies</description>
  <name>AccumuloBook QuickInstall</name>
  <pluginRepositories>
    <pluginRepository>
      <id>sonatype-public-repository</id>
      <url>https://oss.sonatype.org/content/groups/public</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <releases>
        <enabled>true</enabled>
      </releases>
    </pluginRepository>
  </pluginRepositories>
  <properties>
    <quickinstall.location>${project.build.directory}/archive-tmp</quickinstall.location>
    <!-- MLJ: updated from 2.4.1 -->
    <hadoop.version>2.6.4</hadoop.version>
    <hadoop.url>http://archive.apache.org/dist/hadoop/core/hadoop-${hadoop.version}/hadoop-${hadoop.version}.tar.gz</hadoop.url>
    <hadoop.md5>37019f13d7dcd819727be158440b9442</hadoop.md5>
    <!-- MLJ: updated from 3.4.6 -->
    <zookeeper.version>3.4.8</zookeeper.version>
    <zookeeper.url>http://archive.apache.org/dist/zookeeper/zookeeper-${zookeeper.version}/zookeeper-${zookeeper.version}.tar.gz</zookeeper.url>
    <zookeeper.md5>6bdddcd5179e9c259ef2bf4be2158d18</zookeeper.md5>
    <accumulo.version>${project.version}</accumulo.version>
    <accumulo.url>http://archive.apache.org/dist/accumulo/${accumulo.version}/accumulo-${accumulo.version}-bin.tar.gz</accumulo.url>
    <accumulo.md5>ace93d89eb3ff2fe60b694ec85e671f2</accumulo.md5>
  </properties>
  <build>
    <plugins>
      <plugin>
        <groupId>com.googlecode.maven-download-plugin</groupId>
        <artifactId>download-maven-plugin</artifactId>
        <!-- MLJ: updated from 1.2.0 -->
        <version>1.3.0</version>
        <executions>
          <execution>
            <id>fetch-hadoop</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>wget</goal>
            </goals>
            <configuration>
              <url>${hadoop.url}</url>
              <unpack>true</unpack>
              <outputDirectory>${quickinstall.location}</outputDirectory>
              <md5>${hadoop.md5}</md5>
            </configuration>
          </execution>
          <execution>
            <id>fetch-zookeeper</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>wget</goal>
            </goals>
            <configuration>
              <url>${zookeeper.url}</url>
              <unpack>true</unpack>
              <outputDirectory>${quickinstall.location}</outputDirectory>
              <md5>${zookeeper.md5}</md5>
            </configuration>
          </execution>
          <execution>
            <id>fetch-accumulo</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>wget</goal>
            </goals>
            <configuration>
              <url>${accumulo.url}</url>
              <unpack>true</unpack>
              <outputDirectory>${quickinstall.location}</outputDirectory>
              <md5>${accumulo.md5}</md5>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <!-- MLJ: update from 2.7 -->
        <version>3.0.1</version>
        <executions>
          <execution>
            <id>copy-resources</id>
            <!-- here the phase you need -->
            <phase>prepare-package</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${quickinstall.location}</outputDirectory>
              <resources>
                <resource>
                  <directory>src/main/resources</directory>
                  <!--
                  <filtering>false</filtering>
                  -->
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <!-- MLJ: updated from 2.4 -->
        <version>2.6</version>
        <configuration>
          <tarLongFileMode>gnu</tarLongFileMode>
          <descriptors>
            <descriptor>src/main/assembly/assembly.xml</descriptor>
          </descriptors>
          <finalName>${project.artifactId}</finalName>
        </configuration>
        <executions>
          <execution>
            <!-- bind to package phase -->
            <id>make-assembly</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
